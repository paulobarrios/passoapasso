<mvc:View xmlns="sap.m" controllerName="passoapasso.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<Shell>
		<Text text="{i18n>helloPanelTitle}"/>
		<App>
			<pages>
				<Page title="{i18n>homePageTitle}">
					<content>
						<Panel headerText="{i18n>helloPanelTitle}">
							<content>
								<Button icon="sap-icon://account" text="{i18n>showHelloButtonText}" press=".onShowHello"/>
								<Input value="{/recipient/name}" description="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
									
									<List id="invoiceList" headerText="{i18n>invoiceListTitle}" class="sapUiResponsiveMargin" width="auto" items="{invoice>/Invoices}">
										
									<headerToolbar>
										<Toolbar>
											<Title text="Invoices"/>
											<ToolbarSpacer/>
											<SearchField width="30%" search=".onFilterInvoices"/>
										</Toolbar>
									</headerToolbar>
									<items>
										<ObjectListItem title="{invoice>Quantity} x {invoice>ProductName}"
											number="{ parts: [ {path: 'invoice>ExtendedPrice'}, 'EUR' ], type: 'sap.ui.model.type.Currency' }" numberUnit="EUR"
											numberState="{= ${invoice>ExtendedPrice} > 50 ? 'Error' : 'Success' }">
											<firstStatus>
												<ObjectStatus text="{ path: 'invoice>Status', formatter: '.formatter.statusText' }"/>
											</firstStatus>
										</ObjectListItem>
									</items>
								</List>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>